{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["esnext", "esnext.asynciterable"],
		"strict": true,
		"strictNullChecks": true,
		"allowJs": false,
		"strictPropertyInitialization": false,
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "./build",
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/**/*"],
	"references": [{ "path": "../utils" }]
}
